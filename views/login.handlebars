
<form class="signup-form form-inline border" style="margin: 30px;">
    <div class="form-group mb-2">
        <label for="firstname-signup">First-Name:</label>
        <input type="text" class="form-group mx-sm-3 mb-2" id="firstname-signup" />
    </div>
    <div class='form-group mb-2'>
        <label for="last_name_signup">Last-Name:</label>
        <input type="text" class="form-group mx-sm-3 mb-2" id="lastname-signup" />
    </div>
    <div class='form-group mb-2'>
        <label for="address_signup">Address:</label>
        <input type="text" class="form-group mx-sm-3 mb-2" id="address-signup" />
    </div>
    <div class='form-group mb-2'>
        <label for="username-signup">username:</label>
        <input type="text" class="form-group mx-sm-3 mb-2" id="username-signup" />
    </div>
    <div class='form-group mb-2'>
        <label for="email-signup">email:</label>
        <input type="text" class="form-group mx-sm-3 mb-2" id="email-signup" />
    </div>
    <div class='form-group mb-2'>
        <label for="password-signup">password:</label>
        <input type="password" class="form-group mx-sm-3 mb-2" id="password-signup" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary btn-lg">signup</button>
    </div>
</form>
<form class="login-form form-inline border" style="margin: 30px;">
    <div class="form-group mb-2">
        <label for="email-login">email:</label>
        <input type="text" id="email-login" />
    </div>
    <div class="form-group mb-2">
        <label for="password-login">password:</label>
        <input type="password" id="password-login" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary btn-lg">login</button>
    </div>
</form>


<script src="/javascript/login.js"></script>