<!--Navigation-->
<header>
    {{! <h1>
        <a href="/">Pizza Palace</a>
    </h1> }}
    <nav>
        <!-- Unordered list element -->
        <ul>
            <!-- List item element-->
            <li>
                <!-- Anchor element -->
                <a href="#Appetizers">Appetizers</a>
            </li>
            <li>
                <a href="#Salads">Salads</a>
            </li>
            <li>
                <a href="#NY-Style-Pizzas">NY Style Pizzas</a>
            </li>
            <li>
                <a href="#Desserts">Desserts</a>
            </li>
            <li>
                <a href="#Drinks">Drinks</a>
            </li>
            <li>
                <a href="/login">Login</a>
            </li>
            <li>
                <button id="logout" class="btn-no-style">logout</button>
            </li>
    </nav>
</header>



<body>
    <div class='container' style="padding: 100px">
        <h2>Appetizers</h2>
        <div class="row">
            {{#each items as |item|}}
            {{#ifCategory item "Appetizer"}}
            {{>item-info item}}
            {{/ifCategory}}
            {{/each}}
        </div>
    </div>

    <div class='container' style="padding: 100px">
        <h2>Salads</h2>
        <div class="row">
            {{#each items as |item|}}
            {{#ifCategory item "Salad"}}
            {{>item-info item}}
            {{/ifCategory}}
            {{/each}}
        </div>
    </div>

    <div class='container' style="padding: 100px">
        <div class="row">
            <h2>NY Style Pizzas</h2>
            {{#each items as |item|}}
            {{#ifCategory item "Pizza"}}
            {{>item-info item}}
            {{/ifCategory}}
            {{/each}}
        </div>
    </div>

    <div class='container' style="padding: 100px">
        <h2>Desserts</h2>
        <div class="row">
            {{#each items as |item|}}
            {{#ifCategory item "Dessert"}}
            {{>item-info item}}
            {{/ifCategory}}
            {{/each}}
        </div>
    </div>


    <div class='container' style="padding: 100px">
        <h2>Beverages</h2>
        <div class="row">
            {{#each items as |item|}}
            {{#ifCategory item "Drink"}}
            {{>item-info item}}
            {{/ifCategory}}
            {{/each}}
        </div>
    </div>


    <script src="/js/logout.js"></script>

</body>
