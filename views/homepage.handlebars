            {{#each items as |item|}}
            {{#ifCategory item "Dessert"}}
            {{>item-info item}}
            {{/ifCategory}}
            {{/each}}
        </div>
    </div>


    <div class='container' style="padding: 100px">
        <h2 class="Appetizers">Beverages</h2>
        <div class="row">
            {{#each items as |item|}}
            {{#ifCategory item "Drink"}}
            {{>item-info item}}
            {{/ifCategory}}
            {{/each}}
        </div>
    </div>




